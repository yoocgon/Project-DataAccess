        { id: 10, value: 10, timestamp: '2023-06-01 00:00:00' },
    ]

    function renderTable() {

        let elemTable = document.getElementById("tb_result");

        let htmlFix = `
            <th>No</th>
            <th>예제값</th>
            <th>날짜</th>
        `

        let htmlRow = `
            <tr>
                <td>{id}</td>
                <td>{value}</td>
                <td>{timestamp}</td>
            </tr>
        `

        let htmlStack = "";
        dataResult.forEach((item) => {
            let htmlTemp = htmlRow.replaceAll('{id}', item.id);
            htmlTemp = htmlTemp.replaceAll('{value}', item.value);
            htmlTemp = htmlTemp.replaceAll('{timestamp}', item.timestamp);
            htmlStack += htmlTemp;
        });

        elemTable.innerHTML = htmlFix + htmlStack;
    }

    renderTable();

</script>
